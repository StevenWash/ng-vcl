    "pre-commit": "~1.2.2",
    "raw-loader": "~0.5.1",
    "rimraf": "~2.5.4",
    "rxjs": "^5.0.1",
    "style-loader": "~0.13.1",
    "tslint": "^4.0.2",
    "typescript": "^2.1.5",
    "vcl-core-modules": "~0.1.1",
    "vcl-default-theme": "~0.1.2",
    "vcl-default-theme-terms": "~0.1.0",
    "vcl-font-awesome": "~0.1.0",
